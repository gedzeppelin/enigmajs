{
  "name": "enigmajs",
  "version": "0.2.0",
  "workspaces": [
    "packages/*"
  ],
  "description": "An API focused UI component library for VueJS 3",
  "scripts": {
    "build:core": "babel packages/enigmajs-core/src -d packages/enigmajs-core/dist -x \".js,.ts\" && tsc -p tsconfig.core.json",
    "publish:core": "yarn publish --cwd packages/enigmajs-core",
    "tsc": "tsc --noEmit --emitDeclarationOnly false",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ext .ts --ext .vue packages/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thefungusrocket/enigmajs.git"
  },
  "author": "Gedy Palomino",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@types/lodash": "^4.14.171",
    "@types/node": "^16.3.3",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "eslint": "^7.30.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.13.0",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "pug": "^3.0.2",
    "pug-plain-loader": "^1.1.0",
    "sass": "^1.35.2",
    "sass-loader": "^12.1.0",
    "typescript": "^4.3.5"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  }
}