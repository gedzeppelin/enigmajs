{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "dist",
    "removeComments": false,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "esnext",
    "paths": {
      "enigmajs-core": [
        "packages/enigmajs-core/src"
      ]
    }
  },
  "include": [
    "packages/*/src",
  ],
  "exclude": [
    "packages/*/dist",
    "**/node_modules",
    "**/tests",
  ],
}